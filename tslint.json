{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb", 
        "tslint-config-prettier",
        "tslint-eslint-rules"
    ],
    "rules": {
        "no-boolean-literal-compare": false,
        "no-this-assignment": false,
        "import-name": false,
        "variable-name": false,
        "semicolon": [true, "always"],
        "trailing-comma": true,
        "object-curly-spacing": true,
        "array-bracket-spacing": [
            true,
            "never"
        ]
    }
}